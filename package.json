{
  "name": "power-sector-analytics",
  "version": "1.0.0",
  "description": "Nexus - Sustainability Intelligence Platform for Power Sector Analytics",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn api.index:app --reload",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "sustainability",
    "power-sector",
    "analytics",
    "net-zero",
    "carbon-emissions",
    "energy-transition"
  ],
  "author": "phiquangdat",
  "license": "MIT"
}